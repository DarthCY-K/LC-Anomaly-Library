<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    <defName>FakeInvisibility</defName>
    <label>伪黑暗灵能隐身</label>
    <description>这是一个用于规避自动被索敌的假隐身效果，需要配合解除隐身的镇压操作</description>
    <!-- 是否是负面状态 -->
    <isBad>false</isBad>
    <comps>
      <li Class="LCAnomalyLibrary.Comp.LC_HediffCompProperties_FakeInvisibility">
        <!-- 玩家是否能看到该隐形对象 -->
        <visibleToPlayer>true</visibleToPlayer>
        <!-- 隐身状态变化间隔 -->
        <fadeDurationTicks>60</fadeDurationTicks>
      </li>
      <!-- 死后消失 -->
      <li Class="HediffCompProperties_DisappearsOnDeath" />
    </comps>
  </HediffDef>
  
</Defs>